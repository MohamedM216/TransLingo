{
  "manifest_version": 3,
  "name": "Smart Dictionary",
  "version": "1.0",
  "description": "Quick word definitions with double-click and right-click",
  "permissions": [
    "storage",
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.dictionaryapi.dev/*"
  ],
  "action": {
    "default_popup": "practice/practice.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/content.js",
        "cache.js",
        "practice/practice.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}